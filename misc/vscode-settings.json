{
  "editor.accessibilitySupport": "off",
  "workbench.colorTheme": "Monokai Dimmed",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "redhat.telemetry.enabled": false,
  "pasteImage.insertPattern": "<figure>\n\t<img src=\"${imageFilePath}\"/>\n\t<figcaption><center><i>OPIS</i></center></figcaption>\n</figure>",
  "pasteImage.path": "${currentFileDir}/images",
  "nginx-conf-hint.format.align": true,
  "editor.codeActionsOnSave": {},
  "editor.wordWrap": "on",
  "telemetry.telemetryLevel": "off",
  "window.zoomLevel": 1,
  "editor.minimap.enabled": true,
  "editor.tabSize": 4,
  "editor.smoothScrolling": true,
  "editor.tabCompletion": "on",
  "editor.insertSpaces": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.errorLens.enabled": true,
  "gitlens.hovers.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.codeLens.enabled": true,
  "gitlens.statusBar.enabled": true,
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[nginx]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  }
}